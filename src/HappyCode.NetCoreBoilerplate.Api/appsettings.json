{
  "ConnectionStrings": {
    "MySqlDb": "server=mysql;Database=employees;Uid=user;Pwd=simplepwd;",
    "MsSqlDb": "Data Source=mssql;Initial Catalog=cars;User ID=user;Password=simplePWD123!;TrustServerCertificate=true;",
    "SqliteDb": "Filename=books.db"
  },

  "PingWebsite": {
    "Url": "https://google.com",
    "TimeIntervalInMinutes": 60
  },

  "ApiKey": {
    "SecretKey": "ABC-xyz"
  },

  "FeatureManagement": {
    "ApiKey": true,
    "DockerCompose": false,
    "Santa": {
      "EnabledFor": [
        {
          "Name": "Microsoft.TimeWindow",
          "Parameters": {
            "Start": "2020-12-06 00:00:00",
            "End": "2020-12-06 23:59:59"
          }
        }
      ]
    },
    "ConnectionInfo": {
      "EnabledFor": [
        {
          "Name": "Microsoft.Percentage",
          "Parameters": {
            "Value": 50
          }
        }
      ]
    }
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] <s:{SourceContext}> {Message:lj}{NewLine}{Properties}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/HappyCode.NetCoreBoilerplate.Api.log"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "HappyCode.NetCoreBoilerplate.Api"
    }
  }
}

